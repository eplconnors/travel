<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Destinations</h1>
<ul class="nav nav-pills">
  <li role="presentation" class="active"><%= link_to "All", destinations_path %></li>
  <% @my_countries.each do |c| %>
  <li><%= link_to "#{c.country}", controller: "destinations", country: "#{c.country}"%></li>
  <% end %>
</ul>
<div class="row">
    <% @destinations.each do |destination| %>
      <div class="col-md-6">
       <div class="panel panel-default">
        <div class="panel-body">
         <h2><%= destination.city %></h2>
         <h3><%= destination.country %></h3>
         <%= image_tag destination.avatar.url(:medium), class: "img-responsive" %>
         <p><%= destination.description %></p>
         <p> Population: <%= destination.population %> </p>

         <div class="btn-group">
          <%= link_to 'Show', destination, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-default" %>
          <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Destination', new_destination_path, class: "btn btn-primary" %>
